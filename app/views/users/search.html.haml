.container.form-wrapper
  .row
    - if @found_users.present?
      - @found_users.each do |user|
        .col-sm-4
          .card.text-black.bg-white.mb-3{:style => "max-width: 23rem"}
            .card-header= user.fullname
            .card-body
              - user.levels.group_by(&:level).sort.reverse.each do |key, levels_grouped|
                - if key == 0
                  = render "levels", levels_grouped: levels_grouped
                  %br
                - elsif key == 1
                  %h5= t("beginner_at")
                  - levels_grouped.each do |level|
                    = button_to level.technology.name, root_path(query: level.technology.name), class: "btn btn-success", method: :post
                    %br
                - elsif key == 2
                  %h5= t("good_at")
                  - levels_grouped.each do |level|
                    = button_to level.technology.name, root_path(query: level.technology.name), class: "btn btn-warning", method: :post
                    %br
                - else
                  %h5= t("master_at")
                  - levels_grouped.each do |level|
                    = button_to level.technology.name, root_path(query: level.technology.name), class: "btn btn-danger", method: :post
                    %br
              %br
              %h5= t(".about")
              %p= user.description.truncate(120)
              = button_to "See more", user_path(user), class: "btn btn-info", method: "get"
    - else
      %h3= t("no_search_results")
