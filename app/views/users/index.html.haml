= video_tag("main_video_bg.mp4", type: "video/mp4", autoplay: "autoplay",
            loop: "loop", muted: "muted", playsinline: "",
            poster: "main_video_poster.jpg", id: "bgvid")
.container
  .row
    .col-md-8.offset-md-2.col-12
      %h1#motto= t("motto")
      = form_tag(root_path, method: "post") do
        .row.no-gutters
          .input-group.no-gutters
            .col-9
              = text_field_tag :query, nil, placeholder: t("search_hint"), class: "form-control"
            .col-3
              = submit_tag t("search"), class: "btn btn-danger form-control"
