%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  .container
    %a.navbar-brand{:href => root_path}
      %span.logo.blue IT
      %span.logo.grey utor
    #navbarSupportedContent.collapse.navbar-collapse
      %ul.navbar-nav.mr-auto
        %li.nav-item.active
          %a.nav-link{:href => about_path}
            About Us
            %span.sr-only (current)
        %br
      .nav-item.dropdown
        %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
          %button.btn.btn-outline-danger= t("choose_lang")
        .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
          = link_to "English", { :locale => 'en' }, class: "dropdown-item nav-item nav-link"
          = link_to "Polski", { :locale => 'pl' }, class: "dropdown-item nav-item nav-link"
      - if user_signed_in?
        .nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            %button.btn.btn-outline-danger= current_user.email
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            = link_to "My Profile", user_path(current_user), class: "dropdown-item nav-item nav-link"
            = link_to "Edit profile", edit_user_path(current_user), class: "dropdown-item nav-item nav-link"
            = link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item nav-item nav-link"
      - else
        = link_to t(:sign_up), new_user_registration_path, class: "nav-item nav-link"
        = link_to t(:login), new_user_session_path, class: "nav-item nav-link"
