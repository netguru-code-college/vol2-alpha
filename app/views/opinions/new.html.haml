.container.form-wrapper
  .row
    .col-md-8.offset-2
      %h3= @user.fullname
      = form_for [@user, @opinion] do |f|
        .card.bg-light
          .card-body
            .form-group
              = f.label :rating, t("rating")
              = f.number_field :rating, class: "form-control"
            .form-group
              = f.label :content, t("opinion")
              = f.text_area :content, class: "form-control"
              = f.hidden_field :user_id
            .actions
              = f.submit t("add_opinion"), type: "submit"
